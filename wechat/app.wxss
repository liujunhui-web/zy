/**app.wxss**/
@import "./style/public.wxss";
@import "./style/iconfont.wxss";

.tabbar {
    /*IOS fixed 效果和absolute相同*/
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20rpx 0;
    border-top:1rpx solid #f5f5f5;
    height: 136rpx;
    
}

.tabbar view {
    height: 100%;
    position: relative;
    width: 20%;
    flex-direction: column;
    font-size: 24rpx;
    align-items: center;
    justify-content: space-between;
}

.tabbar text {
    margin-top: 4rpx;
    color: #999;
}

.tabbar text.active {
    color: #87c000;
}

.tabbar image {
    width: 50rpx;
    height: 50rpx;
}
.tabbar view:nth-child(3) image {
    background-color: #fff;
    padding:8rpx;
    border-radius:50%;
    box-shadow:  #aaa 0 0 10rpx ;
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    top: -50%;
}
.tabbar view:nth-child(3) text {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
}